<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"> <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:backgroundStacked">?attr/colorPrimaryDark</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubTitleText</item>
    </style>

    <style name="ActionBarSubTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#b0ffffff</item>
        <item name="android:textSize">14dp</item>
    </style>


</resources>